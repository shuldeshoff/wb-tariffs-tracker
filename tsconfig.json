{
    "compilerOptions": {
        "strict": true,
        "module": "NodeNext",
        "target": "es2017",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "rootDir": ".",
        "outDir": "./dist",
        "paths": {
            "#*": [
                "./src/*",
                "./dist/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.*",
        "src/**/*.spec.*"
    ]
}